@model List<TbPage>


@section Styles
{
    <!-- Plugin css for this Model -->
    <link rel="stylesheet" href="~/Admin/assets/Backend/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <!-- End plugin css for this Model -->
}


<div class="container-fluid Model-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="Model-header">
                <h3 class="Model-title"> Data table </h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Tables</a></li>
                        <li class="breadcrumb-item active" aria-current="Model">Data table</li>
                    </ol>
                </nav>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Data table</h4>
                    <div class="row">
                        @*        <div class="col-12">
                        <a asp-controller="Items " asp-action="Edit" class="btn btn-success btn-fw">New</a>
                        <div class="form-group">
                        <label for="exampleInputUsername1">@ResAdmin.lblModelegoryName</label>
                        <select class="form-control"  asp-items="@(new SelectList(ViewBag.lstModelegories,"ModelegoryId","ModelegoryName"))"></select>

                        </div>


                        <label for="exampleInputUsername1">@ResAdmin.lblItemType</label>
                        <select asp-items="@(new SelectList(ViewBag.lstItemTypes,"ItemTypeId","ItemTypeName"))"
                        onchange="Search(this)"></select>
                        </div>
                        </div> *@
                        @*     <div class="col-12">
                        @{
                        if (User.IsInRole("Admin"))
                        {
                        <a asp-controller="Items" asp-action="Edits" class="btn btn-success btn-fw">New</a>
                        }
                        } *@

                        <table id="order-listing" class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@ResAdmin.lblTitel </th>
                                    <th>@ResAdmin.lblMetaDescriptiuon </th>
                                    <th>@ResAdmin.lblMetaKeyWord </th>
                                    <th>@ResAdmin.lblImageName </th>

                                    <th>@ResGeneral.lblAcations</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr style="margin:0px;padding:0px;">
                                        <td class="col-md-8"> @item.Title </td>
                                        <td class="col-md-8"> @item.MetaDescriptiuon</td>
                                        <td class="col-md-8"> @item.MetaKeyWord </td>
                                       
                                        <td class="col-md-8"> @item.ImageName </td>

                                        <td class="col-md-4" style="margin:0px;padding:0px;">
                                            <a style="height:max-content"
                                               asp-controller="Models" asp-action="Edit" asp-route-pageId="@item.PageId"
                                               class="btn btn-info btn-fw">Edit</a>

                                            <a asp-controller="Items" asp-action="Delete" asp-route-itemId="@item.PageId"
                                               class="btn btn-danger btn-fw"
                                               onclick="return confirm(" Are you sure");">Delete</a>
                                        </td>
                                    </tr>
                                }

          


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<!-- main-panel ends -->
</div>

@section Scripts
{
    <!-- plugins:js -->
    <script src="~/Admin/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this Model -->
    <script src="~/Admin/assets/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Admin/assets/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this Model -->
    <!-- Custom js for this Model -->
    <script src="~/Admin/assets/js/data-table.js"></script>
    <!-- End custom js for this Model -->
}


