@model OrderViewModel
@using Microsoft.Extensions.Localization
@using UI.Resources
@inject IStringLocalizer<ResWebSite> Localizer




@{
    ViewData["Title"] = Localizer["OrderConfirmation"];
    Layout = "_Layout";
}

<div class="container mt-5 text-center">
    <div class="card shadow-lg mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <div class="text-success mb-4">
                <i class="fas fa-check-circle fa-4x"></i>
            </div>
            <h2 class="card-title mb-4">@Localizer["ThankYou"]!</h2>

            <div class="text-start mb-4">
                <p><strong>@Localizer["OrderNumber"]:</strong> #@Model.InvoiceId</p>
                <p><strong>@Localizer["OrderDate"]:</strong> @Model.OrderDate.ToString("f")</p>
                <p><strong>@Localizer["EstimatedDelivery"]:</strong> @Model.DeliveryDate.ToString("f")</p>
                <hr>

                <h5>@Localizer["OrderSummary"]</h5>
                @foreach (var item in Model.Items)
                {
                    <div class="d-flex justify-content-between">
                        <span>@item.ItemName x @item.Quantity</span>
                        <span>@((item.Quantity * item.Price).ToString("C"))</span>
                    </div>
                }

                <hr>
                <div class="d-flex justify-content-between fw-bold">
                    <span>@Localizer["Total"]:</span>
                    <span>@Model.TotalPrice.ToString("C")</span>
                </div>
            </div>

            <a href="@Url.Action("Index", "Home")"
               class="btn btn-primary btn-lg">
                @Localizer["ContinueShopping"]
            </a>
        </div>
    </div>
</div>
