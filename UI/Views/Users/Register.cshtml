@model RegisterModel
<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>create account</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">create account</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>create account</h3>
                <div class="theme-card">
                    <form class="theme-form" method="post" enctype="multipart/form-data"
                          asp-controller="Users" asp-action="Register">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="email">@ResWebSite.lblFirstName</label>
                                <input asp-for="FirstName" type="text" class="form-control" id="fname" placeholder="First Name"
                                       required="">
                                <span class="btn btn-danger" asp-validation-for="LastName"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="review">@ResWebSite.lblLastName</label>
                                <input asp-for="LastName" type="text" class="form-control" id="lname" placeholder="Last Name"
                                       required="">
                                <span class="btn btn-danger" asp-validation-for="LastName"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="email">@ResWebSite.lblEmail</label>
                            
                                <input asp-for="Email" type="text" class="form-control" id="email" placeholder="Email" required=""
                             >

                                <span class="btn btn-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="review">@ResWebSite.lblPassword</label>
                                <input asp-for="Password" type="password" class="form-control" id="review"
                                       placeholder="Enter your password" required="">
                           @*  </div><a href="#" class="btn btn-solid">create Account</a> *@
                           
                        </div>
                            <button class="btn btn-solid" type="submit">create Account</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}