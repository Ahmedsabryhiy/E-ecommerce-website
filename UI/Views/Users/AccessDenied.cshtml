@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied - 403 Forbidden</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            background: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            background: radial-gradient(circle at center, #ffffff, #f1f3f5);
        }

        .denied-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 40px;
            text-align: center;
        }

        .error-code {
            font-size: 8rem;
            font-weight: 700;
            color: #dc3545;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
            margin-bottom: 20px;
            background: linear-gradient(45deg, #dc3545, #ff6b6b);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .denied-icon {
            font-size: 4rem;
            color: #dc3545;
            margin-bottom: 30px;
            animation: pulse 2s infinite;
        }

        .denied-message h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #212529;
        }

        .denied-message p {
            font-size: 1.2rem;
            color: #6c757d;
            margin-bottom: 30px;
        }

        .home-btn {
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 30px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            border: none;
            background: linear-gradient(45deg, #dc3545, #ff6b6b);
            color: white;
        }

            .home-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(220,53,69,0.3);
            }

        keyframes pulse {
            0%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
        }

        }

        media (max-width: 768px) {
            .error-code

        {
            font-size: 5rem;
        }

        .denied-icon {
            font-size: 3rem;
        }

        .denied-message h1 {
            font-size: 2rem;
        }

        }
    </style>
</head>
<body>

    <div class="container">
        <div class="denied-container">
            <div class="denied-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <div class="error-code">403</div>
            <div class="denied-message">
                <h1>Access Denied</h1>
                <p>You don't have permission to access this page. Please check your credentials or contact the administrator.</p>
                <button class="home-btn">
                    <i class="fas fa-arrow-left me-2"></i>Return to Home
                </button>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function() {
            // Add animation to icon
            $('.denied-icon').hover(
                function() {
                    $(this).css('animation', 'none');
                },
                function() {
                    $(this).css('animation', 'pulse 2s infinite');
                }
            );

            // Button hover effect
            $('.home-btn').hover(
                function() {
                    $(this).css('transform', 'translateY(-2px)');
                },
                function() {
                    $(this).css('transform', 'translateY(0)');
                }
            );

            // Add click animation
            $('.home-btn').click(function() {
                window.location.href = '/';
            });

            // Page entrance animation
            $('.denied-container').hide().fadeIn(800);
        });
    </script>

</body>
</html>